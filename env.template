# Encar Monitor Environment Variables Template
# Copy this file to .env and fill in your actual values
# 
# IMPORTANT: Never commit .env to version control!

# =================================
# TELEGRAM BOT CONFIGURATION
# =================================
# Get these from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# =================================
# DATABASE CONFIGURATION
# =================================
# Path where SQLite database will be stored
DATABASE_PATH=/opt/encar-monitor/data/encar_listings.db

# =================================
# MONITORING CONFIGURATION
# =================================
# How often to check for new listings (minutes)
CHECK_INTERVAL_MINUTES=15 # Includes enhanced extraction for registration, views, and lease
QUICK_SCAN_INTERVAL_MINUTES=5

# Notification settings
NOTIFICATION_THRESHOLD=5
IMMEDIATE_ALERT_MAX_VIEWS=10

# =================================
# LOGGING CONFIGURATION
# =================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file paths
LOG_PATH=/opt/encar-monitor/logs/
ALERTS_LOG_FILE=/opt/encar-monitor/logs/encar_alerts.log
MONITOR_LOG_FILE=/opt/encar-monitor/logs/encar_monitor.log

# =================================
# BROWSER CONFIGURATION
# =================================
# Browser settings for server deployment
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30
BROWSER_WAIT_TIME=3

# =================================
# SEARCH CONFIGURATION
# =================================
# Maximum registration age for "new" listings (days)
MAX_REGISTRATION_AGE_DAYS=30

# Maximum views to consider listing as "new"
MAX_VIEWS_FOR_NEW=100

# =================================
# SYSTEM CONFIGURATION
# =================================
# Working directory for the application
WORK_DIR=/opt/encar-monitor

# User to run the service as
SERVICE_USER=ubuntu
